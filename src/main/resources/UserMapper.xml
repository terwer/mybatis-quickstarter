<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.dao.IUserDao">
    <!-- sql模板 -->
    <sql id="selectUserTemplate">
        select * from user
    </sql>

    <!-- 查询用户 -->
    <select id="findAll" resultType="useR">
        select * from user
    </select>

    <!-- 添加用户 -->
    <insert id="saveUser" parameterType="com.test.pojo.User">
        insert into user(username) values(#{username})
    </insert>

    <!-- 更新用户 -->
    <update id="updateUser" parameterType="com.test.pojo.User">
        update user set username=#{username} where id=#{id}
    </update>

    <!-- 删除用户 -->
    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete from user where id=#{xyz}
    </delete>

    <!-- if条件查询 -->
    <!--
    <select id="findByCondition" parameterType="user" resultType="user">
        select * from user where 1=1
        <if test="id != null">
            and id=#{id}
        </if>
        <if test="username != null">
            and username=#{username}
        </if>
    </select>
    -->
    <!-- 推荐方式，能够自动处理and -->
    <select id="findByCondition" parameterType="user" resultType="user">
        select * from user
        <where>
            <if test="id != null">
                and id=#{id}
            </if>
            <if test="username != null">
                and username=#{username}
            </if>
        </where>
    </select>

    <!-- foreach -->
    <select id="findByIds" parameterType="user" resultType="user">
        <include refid="selectUserTemplate"/>
        <where>
            <foreach collection="array" item="id" open="id in (" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </select>
</mapper>